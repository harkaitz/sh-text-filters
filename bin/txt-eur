#!/bin/sh -e
##:
#h: Usage: txt-eur < TEXT > TEXT
#h:
#h: Normalize monetary value.
##:
txt_eur() {
    sed '
      s|^\.\.*||g
      s|^ *||g
      s|^\([0-9]*\),\([0-9]*\) *â‚¬|\1.\2 EUR|
      s|^\([0-9]*\),\([0-9][0-9]\)|\1.\2 EUR|
    ' | tr -d '\n'
}
if test @"$(basename "$0")" = @"txt-eur";then
    case "${1}" in
        -h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0";;
        *)         txt_eur "$@"; exit 0;;
    esac
fi
